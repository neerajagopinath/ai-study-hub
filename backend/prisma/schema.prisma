generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String?
  googleId  String?
  createdAt DateTime @default(now())
  studyKits StudyKit[]
  speakerNotes SpeakerNotes[]
}

model Document {
  id         String   @id @default(uuid())
  filename   String
  mimeType   String
  path       String
  uploadedAt DateTime @default(now())
  studyKits StudyKit[]
  speakerNotes SpeakerNotes[]
}

model StudyKit {
  id          String   @id @default(uuid())
  userId      String
  documentId  String

  // Core AI output
  summary     String
  keyTopics   Json
  flashcards  Json
  definitions Json

  // Metadata
  subject     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user     User     @relation(fields: [userId], references: [id])
  document Document @relation(fields: [documentId], references: [id])

  @@unique([userId, documentId])
}

model SpeakerNotes {
  id          String   @id @default(uuid())
  userId      String
  documentId  String

  // Core AI output
  notes       Json
  vivaQs      Json
  tips        Json

  // Options user selected
  mode        String?
  style       String?
  duration    Int?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user     User     @relation(fields: [userId], references: [id])
  document Document @relation(fields: [documentId], references: [id])

  @@unique([userId, documentId])
}
